<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@android:color/black">

    <ImageView
        android:id="@+id/nav_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:alpha="0.7"
        android:scaleType="centerCrop"
        android:src="@drawable/nav_header_food" />

    <TextView
        android:id="@+id/menu_slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/margin_standard"
        android:layout_marginBottom="@dimen/margin_standard"
        android:text="@string/nav_header_text"
        android:textColor="@android:color/white"
        android:textSize="@dimen/recipe_detail_text_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/menu_slogan"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/margin_standard"
        android:fontFamily="@font/montserrat"
        android:text="@string/app_name"
        android:textColor="@android:color/white"
        android:textSize="@dimen/recipe_title"
        android:textStyle="bold" />


</RelativeLayout>