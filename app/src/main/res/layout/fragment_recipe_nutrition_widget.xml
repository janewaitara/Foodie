    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/goodNutrientsListRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_standard"
        />

</LinearLayout>