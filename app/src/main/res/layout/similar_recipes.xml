<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/padding_standard">

    <ImageView
        android:id="@+id/similar_recipe_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:contentDescription="@string/content_description_similar_recipe"
        android:scaleType="center"
        app:srcCompat="@drawable/food_image" />

    <TextView
        android:id="@+id/similar_recipe_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_standard"
        android:text="@string/similar_recipe_title"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/similar_recipe_servings"
        android:drawableStart="@drawable/food"
        android:drawablePadding="@dimen/drawable_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_standard"
        android:text="@string/similar_recipes_servings"
        android:textStyle="bold" />

</LinearLayout>