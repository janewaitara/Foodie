<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_standard"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/ingredient_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:contentDescription="@string/content_description_recipe_image"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/food_image"
        app:layout_constraintStart_toStartOf="@+id/ingredientsNameContainer"
        app:layout_constraintEnd_toEndOf="@+id/ingredientsNameContainer"
        app:layout_constraintTop_toTopOf="@+id/ingredientsNameContainer"
        app:layout_constraintBottom_toTopOf="@+id/ingredientsNameContainer" />

    <androidx.cardview.widget.CardView
        android:id="@+id/ingredientsNameContainer"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:cardCornerRadius="@dimen/card_corner_radius"
        card_view:cardElevation="@dimen/card_elevation"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/ingredient_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_toEndOf="@id/ingredient_image"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/padding_standard"
            android:text="@string/ingredients_title"
            android:textStyle="bold"
            />
    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>